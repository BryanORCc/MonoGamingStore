@model MonoGamingStore.Models.Contacto

@{
    ViewData["Title"] = "Eliminar Mensaje";
}

<div class="container row-1 my-4" style="background: #c00b0b">
    <h1 class="text-center text-white px-3">@ViewData["Title"]</h1>
</div>

<img class="mx-auto d-block" src="~/img/logo.png" style="height: 300px">
<h3 class="text-white">¿Está seguro de eliminar este mensaje?</h3>
<div class="text-white">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContactoId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactoId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mensaje)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mensaje)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContactoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Mensajes">Regresar</a>
    </form>
</div>