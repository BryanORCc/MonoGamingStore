  </li>

</ul>


<BR></BR>


<div style="background: url('../img/admin/fondo_prod2.jpg') no-repeat center fixed; background-size: cover; padding: 8%;">
  <h1 style="margin-bottom: 5%;">Lista de Productos Buscados</h1>

  <table class="table border">
      <tr>
          <th>Id</th>
          <th>Nombre del Producto</th>
          <th>Foto del Producto</th>
          <th>Detalle del Producto</th>
          <th>Precio</th>
          <th>Categoria</th>
      </tr>
      @foreach (var item in Model)
      {
          <tr>
              <td>@item.ProductoId</td>
              <td>@item.Nombre</td>
              <td><img src="@item.Foto" width="100px"> </td>
              <td>@item.Detalle</td>
              <td>@item.Precio</td>
              <td>@item.Categoria</td>

              <td>
                  <a href="/Administrador/ModificarProducto/@item.ProductoId" class="btn btn-secondary">Modificar</a>
                  <br>
                  <br>

                  <form action="/Administrador/EliminarProducto" method="post" class="d-inline-block">
                      <input type="hidden" name="id" value="@item.ProductoId" />
                      <button class="btn btn-danger">Eliminar</button>
                  </form>
              </td>
          </tr>
      }
      @if (Model.Count == 0) {
          <tr>
              <td colspan="12" class="text-center">
                  <h3 style="color: blue;"> Aun no tenemos productos registrados</h3>
              </td>
          </tr>
      }
  </table>

  <a href="/Administrador/RegistrarProducto" class="btn btn-primary">AÃ±adir Producto Nuevo</a>
</div>

