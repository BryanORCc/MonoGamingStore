<head>
    <link rel="stylesheet" href="~/css/estilos.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>

<body class="fondo">
    <div class="text-center input-group">
        <a class="nav-link text-dark form-control col-auto" asp-area="" asp-controller="Pantallas" asp-action="Monitores">Monitores</a>
        <a class="nav-link text-dark form-control col-auto" asp-area="" asp-controller="Pantallas" asp-action="Graficas">Graficas</a>
        <a class="nav-link text-dark form-control col-auto" asp-area="" asp-controller="Pantallas" asp-action="Cases">Cases</a>
        <a class="nav-link text-dark form-control col-auto" asp-area="" asp-controller="Pantallas" asp-action="Procesadores">Procesadores</a>
    </div>
    <h2 class="etiqueta mt-5 text-light font-weight-bold display-4">GRAFICAS</h2>

    <div class="">
        <div class="input-group my-3 px-0"><!--Caja de busqueda-->
            <input type="search" class="form-control rounded" placeholder="Buscar producto" aria-label="Busqueda" aria-describedby="search-addon" />
            <button type="button" class="buscar btn-danger">buscar</button>
        </div>

        <div class="filtro my-3"><!--Cajas para el filtro-->
            
            <div class="cajas1">
                <p class="form-control font-weight-bold" style="width: 50%;">Precio</p>
                <select class="custom-select " required style="width: 50%;">
                    <option value="default">todos</option>
                    <option value="1">S/400 - S/900</option>
                    <option value="2">S/900 - S/1500</option>
                    <option value="3">S/1500 - S/1900</option>
                    <option value="4">S/1900 a mas</option>
                </select>
            </div>
            
            <div class="cajas1">
                <p class="form-control font-weight-bold" style="width: 50%;">Marca</p>
                <select class="custom-select " required style="width: 50%;">
                    <option value="default">todos</option>
                    <option value="1">Asus</option>
                    <option value="2">Zotac</option>
                    <option value="3">Gigabyte</option>
                    <option value="4">Msi</option>
                </select>
            </div>

            <div class="cajas1">
                <p class="form-control font-weight-bold" style="width: 50%;">Modelo</p>
                <select class="custom-select " required style="width: 50%;">
                    <option value="default">todos</option>
                    <option value="1">Gt</option>
                    <option value="2">Radeon</option>
                    <option value="3">RX</option>
                    <option value="4">GTX</option>
                    <option value="5">RTX</option>
                </select>
            </div>

            <div class="cajas1">
                <p class="form-control font-weight-bold" style="width: 50%;">Fabricante</p>
                <select class="custom-select " required style="width: 50%;">
                    <option value="default">todos</option>
                    <option value="1">NVidia</option>
                    <option value="2">AMD</option>
                </select>
            </div>
            
        </div>


        <div class="objetos">

            <div class="product m-3 ">
                <img class="imagen" src="~/img/graficas/Asus RogStrix GeForce RTX 3060 12gb.png">
                <p class="Titulo font-weight-bold">Asus RogStrix GeForce RTX 3060 12gb</p>
                <p class="Precio text-danger text-center font-weight-bold">S/2400.00</p>
                <button class="btn btn-primary">Ver producto</button>
            </div>

            <div class="product m-3 ">
                <img class="imagen" src="~/img/graficas/Asus RogStrix RTX 2080Ti 11gb.png">
                <p class="Titulo font-weight-bold">Asus RogStrix RTX 2080Ti 11gb</p>
                <p class="Precio text-danger text-center font-weight-bold">S/2500.95</p>  
                <button class="btn btn-primary">Ver producto</button>
            </div>

            <div class="product m-3 ">
                <img class="imagen" src="~/img/graficas/Asus TUF gaming RTX 3080 gaming 10gb.png">
                <p class="Titulo font-weight-bold">Asus TUF gaming RTX 3080 gaming 10gb</p>
                <p class="Precio text-danger text-center font-weight-bold">S/5800.50</p>
                <button class="btn btn-primary">Ver producto</button>
            </div>

            <div class="product m-3 ">
                <img class="imagen" src="~/img/graficas/EVGA GeForce GTX 1080Ti 16gb.png">
                <p class="Titulo font-weight-bold">EVGA GeForce GTX 1080Ti 16gb</p>
                <p class="Precio text-danger text-center font-weight-bold">S/2800.85</p>  
                <button class="btn btn-primary">Ver producto</button>
            </div>

            <div class="product m-3 ">
                <img class="imagen" src="~/img/graficas/Gigabyte GeForce RTX 2060 6gb.png">
                <p class="Titulo font-weight-bold">Gigabyte GeForce RTX 2060 6gb</p>
                <p class="Precio text-danger text-center font-weight-bold">S/3200.00</p>
                <button class="btn btn-primary ">Ver producto</button>
            </div>

            <div class="product m-3 ">
                <img class="imagen" src="~/img/graficas/Gigabyte GeForce RTX 2070 Super 8gb.png">
                <p class="Titulo font-weight-bold">Gigabyte GeForce RTX 2070 Super 8gb</p>
                <p class="Precio text-danger text-center font-weight-bold">S/2600.00</p>
                <button class="btn btn-primary">Ver producto</button>
            </div>
        </div>

    </div>
    
</body>