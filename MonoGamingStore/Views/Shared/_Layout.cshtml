<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonoGamingStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #626262">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom mb-3" style="background-color: #424242">
            <div class="container">
                <img src="~/img/logo.png" alt="LOGO" width="50">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">MonoGamingStore</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer" style="height: 8%; background: #424242">
        <div class="row container col-12">
            <div class="col-5 d-flex justify-content-center">
                <p class="container text-center text-white">&copy; 2021 - MonoGamingStore</p>
            </div>
            <div class="col d-flex justify-content-around px-5">
                <a class="text-white" asp-area="" asp-controller="Contacto" asp-action="Index"> Contáctanos </a>
                <a class="text-white" asp-area="" asp-controller="Somos" asp-action="Index"> ¿Quiénes Somos? </a>
                <a class="text-white" asp-area="" asp-controller="Siguenos" asp-action="Index"> Síguenos </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
