@model List<Producto>

<head>
    <link rel="stylesheet" href="~/css/estilos.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>

<body class="fondo">
    <div class="Barra text-center input-group" style="width: 100%;">
        <a class="nav-link text-dark form-control" style="width: 25%;" asp-area="" asp-controller="Pantallas" asp-action="Monitores"><p>Monitores</p></a>
        <a class="nav-link text-dark form-control " style="width: 25%;" asp-area="" asp-controller="Pantallas" asp-action="Graficas"><p>Graficas</p></a>
        <a class="nav-link text-dark form-control " style="width: 25%;" asp-area="" asp-controller="Pantallas" asp-action="Cases"><p>Cases</p></a>
        <a class="nav-link text-dark form-control " style="width: 25%;" asp-area="" asp-controller="Pantallas" asp-action="Procesadores"><p>Procesadores</p></a>
        <a class="nav-link text-dark form-control " style="width: 25%;" asp-area="" asp-controller="Pantallas" asp-action="Rams"><p>Ram</p></a>
        <a class="nav-link text-dark form-control " style="width: 25%;" asp-area="" asp-controller="Pantallas" asp-action="Placas"><p>Placas</p></a>
    </div>
    <h2 class="etiqueta mt-5 text-light font-weight-bold display-4">GRAFICAS</h2>

    <form asp-controller="Pantallas" asp-action="Graficas" class="input-group my-3 px-0">    
        <input name="x" class="form-control rounded" type="text" placeholder="Buscar producto" aria-label="Busqueda">
        <button class="buscar btn-danger" type="submit">Buscar</button>                      
    </form>

    <div class="">
        <div class="filtro my-3"><!--Cajas para el filtro-->
            <div class="cajas1">
                <p class="form-control font-weight-bold" style="width: 50%;">Precio</p>
                <select class="custom-select " required style="width: 50%;">
                    <option value="default">todos</option>
                    <option value="1">S/400 - S/900</option>
                    <option value="2">S/900 - S/1500</option>
                    <option value="3">S/1500 - S/1900</option>
                    <option value="4">S/1900 a mas</option>
                </select>
            </div>
            
            <div class="cajas1">
                <p class="form-control font-weight-bold" style="width: 50%;">Marca</p>
                <select class="custom-select " required style="width: 50%;">
                    <option value="default">todos</option>
                    <option value="1">Asus</option>
                    <option value="2">Zotac</option>
                    <option value="3">Gigabyte</option>
                    <option value="4">Msi</option>
                </select>
            </div>

            <div class="cajas1">
                <p class="form-control font-weight-bold" style="width: 50%;">Modelo</p>
                <select class="custom-select " required style="width: 50%;">
                    <option value="default">todos</option>
                    <option value="1">Gt</option>
                    <option value="2">Radeon</option>
                    <option value="3">RX</option>
                    <option value="4">GTX</option>
                    <option value="5">RTX</option>
                </select>
            </div>

            <div class="cajas1">
                <p class="form-control font-weight-bold" style="width: 50%;">Fabricante</p>
                <select class="custom-select " required style="width: 50%;">
                    <option value="default">todos</option>
                    <option value="1">NVidia</option>
                    <option value="2">AMD</option>
                </select>
            </div>
            
        </div>

        <div class="objetos">
            @foreach (var item in Model)
            { 
                @if(@item.Categoria.Equals("Grafica")){
                    <div class="product m-3">   
                        <img class="imagen" src="@item.Foto">
                        <h4 class="text-center">@item.Nombre</h4>
                        <p class="Titulo font-weight-bold">@item.Detalle</p>
                        <p class="Precio text-danger text-center font-weight-bold">S/ @item.Precio</p>
                        <a href="/Pantallas/Detalle/@item.ProductoId" class="btn btn-secondary">Ver Detalle</a>
                    </div>
                }
            }
            
        </div>

    </div>
    
</body>